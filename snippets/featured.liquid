<div class="newest-release-container">    
  <div class="newest-release-carousel">
    {% for image in product.images %}
    <div class="newest-release-panel">
      {{ image | img_url : "original" | img_tag : "Newest Release" }}
    </div>
    {% endfor %}
  </div>
  <div class="newest-release-copy-and-button">
    <p class="newest-release-header">
      {{ product.metafields.c_f.featured_header }}
    </p>
    <p class="newest-release-subhead">
      {{ product.metafields.c_f.featured_subhead }}
    </p>
    <div class="newest-release-button">
      Shop our newest release
    </div>
  </div>
</div>
