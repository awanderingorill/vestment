{% layout settings.customer_layout %}
            <div class="bag-container">
              <a href="/cart">
                {{ cart.item_count }}
              </a>
            </div>
 
            
            <div class="nav-container">
                <a href="/" class="logo">
                    {{ 'vestment-logo.svg' | asset_url | img_tag : "Vestment Logo"  }}
                </a>
              {% include "legal-modals" %}
              {% include "made-modal" %}
              {% include "about-modal" %}
              {% include "help-modal" %}
              {% include "bottom-nav" %}   
              
              
            </div>
            {% include "menu" %}
<div class="login-contain">
    <div class="template_header">
      <h2 class="title">Reset Account Password</h2>
      <p class="note">Enter a new password for {{ email }}</p>
    </div>

    {% form 'reset_customer_password' %}
      {{ form.errors | default_errors }}

      <div id="password" class="clearfix large_form">
        <input type="password" value="" placeholder="Password" name="customer[password]" id="customer_password" class="large password" size="16" />
      </div>
      <div id="password_confirm" class="clearfix large_form">
        <input type="password" value="" placeholder="Confirm Password" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
      </div>
      <div class="action_bottom">
        <input class="btn" type="submit" value="Reset Password" />
      </div>
    {% endform %}
</div>
